{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "allowLoggingToCloudWatch",
      "Effect": "Allow",
      "Action": [
        "cloudwatch:PutMetricData",
        "ec2:DescribeVolumes",
        "ec2:DescribeTags",
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents",
        "logs:DescribeLogGroups",
        "logs:DescribeLogStreams"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Sid": "ListAllBuckets",
      "Effect": "Allow",
      "Action": [
        "s3:ListAllMyBuckets",
        "s3:GetBucketLocation"
      ],
      "Resource": [
        "arn:aws:s3:::*"
      ]
    },
    {
      "Effect": "Allow",
      "Sid": "EC2Perms",
      "Action": [
        "ec2:DescribeAddresses",
        "ec2:AllocateAddress",
        "ec2:DescribeInstances",
        "ec2:AssociateAddress",
        "ec2:DescribeInstanceStatus",
        "ec2:DescribeTags"
      ],
      "Resource": "*"
    },
    {
      "Effect": "Allow",
      "Sid": "SsmParamStorePerms",
      "Action": [
        "ssm:Describe*",
        "ssm:Get*",
        "ssm:List*"
      ],
      "Resource": [
        "arn:aws:ssm:*:*:parameter/cr-ancillary/jitbit/rds/database/jitbit/*",
        "arn:aws:ssm:*:*:parameter/cr-ancillary/jitbit/system/common/user/jitbit/*"
      ]
    },
    {
      "Sid": "allowAccessToS3Buckets",
      "Effect": "Allow",
      "Action": [
        "s3:DeleteObject",
        "s3:GetObject",
        "s3:GetObjectTagging",
        "s3:ListBucket",
        "s3:PutObject"
      ],
      "Resource": [
        "${config_bucket_arn}",
        "${config_bucket_arn}/*"
      ]
    },
    {
      "Sid": "allowADAutoJoin",
      "Effect": "Allow",
      "Action": [
        "ssm:CreateAssociation"
      ],
      "Resource": "*"
    },
    {
      "Sid": "allowDescribeFSx",
      "Effect": "Allow",
      "Action": [
        " fsx:DescribeFileSystems"
      ],
      "Resource": "*"
    }
  ]
}
