{
    "widgets": [
        {
            "height": 6,
            "width": 6,
            "y": 6,
            "x": 6,
            "type": "metric",
            "properties": {
                "view": "timeSeries",
                "stacked": true,
                "metrics": [
                    [ "AWS/EC2", "CPUUtilization", "AutoScalingGroupName", "${asg_autoscale_name}" ],
                    [ "AWS/AutoScaling", "GroupTotalInstances", ".", "." ],
                    [ "CWAgent", "MemoryUtilization", ".", ".", "objectname", "Memory" ]
                ],
                "region": "${region}",
                "title": "JitBit"
            }
        },
        {
            "height": 6,
            "width": 6,
            "y": 6,
            "x": 0,
            "type": "metric",
            "properties": {
                "metrics": [
                    [ "IIS", "cr-jitbit-dev_AppPool", { "region": "eu-west-2" } ]
                ],
                "view": "timeSeries",
                "stacked": false,
                "region": "${region}",
                "title": "IIS HttpError",
                "period": 300,
                "stat": "SampleCount"
            }
        },
        {
            "height": 6,
            "width": 24,
            "y": 0,
            "x": 0,
            "type": "metric",
            "properties": {
                "metrics": [
                    [ "AWS/ApplicationELB", "RequestCountPerTarget", "TargetGroup", "${target_group_arn_suffix}" ],
                    [ ".", "UnHealthyHostCount", ".", ".", "LoadBalancer", "${lb_arn_suffix}" ],
                    [ ".", "RequestCount", ".", ".", ".", "." ],
                    [ ".", "HTTPCode_Target_4XX_Count", ".", ".", ".", "." ],
                    [ ".", "TargetResponseTime", ".", ".", ".", "." ],
                    [ ".", "RequestCountPerTarget", ".", ".", ".", "." ],
                    [ ".", "HealthyHostCount", ".", ".", ".", "." ]
                ],
                "view": "singleValue",
                "region": "${region}",
                "title": "JitBitALB",
                "period": 300
            }
        },
        {
            "height": 6,
            "width": 6,
            "y": 6,
            "x": 12,
            "type": "metric",
            "properties": {
                "view": "timeSeries",
                "stacked": false,
                "metrics": [
                    [ "AWS/RDS", "FreeStorageSpace", "DBInstanceIdentifier", "${common_prefix}-db" ],
                    [ ".", "FreeableMemory", ".", "." ],
                    [ ".", "CPUUtilization", ".", "." ],
                    [ ".", "WriteIOPS", ".", "." ],
                    [ ".", "ReadIOPS", ".", "." ]
                ],
                "region": "${region}",
                "title": "Database"
            }
        },
        {
            "height": 6,
            "width": 6,
            "y": 6,
            "x": 18,
            "type": "alarm",
            "properties": {
                "title": "Application Status",
                "alarms": [
                    "${app_pool_httperr_offline}"
                ]
            }
        },
        {
            "height": 3,
            "width": 24,
            "y": 12,
            "x": 0,
            "type": "metric",
            "properties": {
                "metrics": [
                    [ "CloudWatchSynthetics", "SuccessPercent", "CanaryName", "${common_prefix}" ],
                    [ ".", "5xx", ".", "." ],
                    [ ".", "2xx", ".", "." ],
                    [ ".", "Failed requests", ".", "." ],
                    [ ".", "4xx", ".", "." ],
                    [ ".", "Duration", ".", "." ],
                    [ ".", "Failed", ".", "." ]
                ],
                "view": "singleValue",
                "region": "eu-west-2",
                "title": "Synthetics",
                "period": 3600,
                "stat": "Average",
                "stacked": true
            }
        }
    ]
}